# Chrome CVE Reproducer Configuration
# Copy this file to config.yaml and modify as needed

# General settings
general:
  output_dir: "./output"
  log_level: "INFO"  # DEBUG, INFO, WARNING, ERROR


# Intelligence collection settings
intel:
  timeout: 30
  cache_ttl: 3600  # seconds
  # nvd_api_key: ""  # Optional, for higher rate limits
  # github_token: ""  # For GitHub API access

# Execution settings
build:
  mode: "hybrid"  # lightweight, local_windows, hybrid
  auto_fallback: true
  source_root: "D:/src"
  msvc_path: "C:/Program Files/Microsoft Visual Studio/2022/Community"

execution:
  # chrome_path: "/path/to/chrome"
  # d8_path: "/path/to/d8"
  timeout: 60
  asan_enabled: true

# Memory system settings
memory:
  storage_path: "./volumes/memory"
  vector_db_path: "./volumes/vectors"

# Agent settings
agents:
  max_retries: 3
  critic_enabled: true
