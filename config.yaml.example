# Chrome CVE Reproducer Configuration
# Copy to config.yaml and modify as needed

general:
  output_dir: "./output"
  log_level: "INFO"

llm:
  # Model name (gpt-4o, gpt-4-turbo, claude-sonnet-4-20250514, etc.)
  default_model: "gpt-4o"
  temperature: 0.0
  max_retries: 3
  timeout: 120

  # OpenAI settings
  openai_api_key: ""          # Or set OPENAI_API_KEY env var
  openai_base_url: ""         # Custom base URL (e.g., http://localhost:8000/v1)

  # Anthropic settings
  anthropic_api_key: ""       # Or set ANTHROPIC_API_KEY env var
  anthropic_base_url: ""      # Custom base URL

intel:
  nvd_api_key: ""             # NVD API key for CVE info
  github_token: ""            # GitHub token for API access
  timeout: 30
  cache_ttl: 3600

execution:
  chrome_path: ""             # Path to Chrome executable
  d8_path: ""                 # Path to d8 (V8 shell) executable
  timeout: 60
  asan_enabled: true

memory:
  storage_path: "./volumes/memory"
  vector_db_path: "./volumes/vectors"

agents:
  max_retries: 3
  critic_enabled: true

# ============================================================================
# Phase 5 Configuration
# ============================================================================

# Expert Review System (Phase 5.3)
review:
  expert_review_enabled: true    # Enable expert review after PoC generation
  auto_accept_threshold: 4       # Auto-accept if quality score >= 4
  editor: ""                     # Leave empty to use $EDITOR or system default

# Dynamic Knowledge Builder (Phase 5.1)
knowledge:
  enabled: true                  # Enable dynamic knowledge extraction
  nvd_api_key: ""                # NVD API key for similar CVE retrieval
  cache_dir: "~/.chrome_cve_cache/knowledge"

# Chromium Source
chromium:
  source_path: ""                # Path to chromium/src (for code context extraction)

